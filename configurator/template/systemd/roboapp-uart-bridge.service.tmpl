[Unit]
Description=Roboapp UART Bridge
After=network-online.target
Wants=network-online.target

[Service]
WorkingDirectory={{APP_FOLDER}}/uart_bridge
ExecStart={{APP_FOLDER}}/uart_bridge/.venv/bin/python src/uart_bridge/main.py
ExecStop=/bin/kill ${MAINPID}
Restart=always
RestartSec=3

[Install]
WantedBy=default.target

